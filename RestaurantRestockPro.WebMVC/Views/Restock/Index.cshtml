@model IEnumerable<RestaurantRestockPro.Models.RestockModels.RestockListItem>
<br />
<br />
<div class="row">
    <div class="col-lg-12 col-lg-offset-3">
        <img src="~/img/restockpto1.jpg" alt="..." class="img-circle">
    </div>
</div>
<br />
<br />
<br />
<br />
<h2>Restock</h2>

<p>
    @Html.ActionLink("Add More Stock", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RestockId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockOrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockItemId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RestockId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockOrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockItemId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RestockId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RestockId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RestockId })
            </td>
        </tr>
    }

</table>

<br />
<br />
<br />

<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="panel-title">Creators Note</h3>
    </div>
    <div class="panel-body">
        Last Step: Add your Restock quantities here.  This should be the last step that you do.  You will need both a Stock Order ID and Stock Item ID to complete this step.
    </div>
</div>

<br />
<br />
<br />
<div class="row">
    <div class="btn-group col-lg-offset-5">
        <div class="col-md-12">
            @Html.ActionLink("Restaurants", "Index", "Restaurant")
        </div>
        <div class="col-md-12">
            @Html.ActionLink("Stock Items", "Index", "StockItem")
        </div>
        <div class="col-md-12">
            @Html.ActionLink("Stock Orders", "Index", "StockOrder")
        </div>
    </div>
</div>

