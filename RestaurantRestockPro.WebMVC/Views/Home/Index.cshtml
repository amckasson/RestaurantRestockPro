@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Restaurant Restock Pro</h1>
    <p class="lead">Restaurant Restock Pro is a web application that was created to allow Restaurant owners, managers, and employees to easily keep track of items that need to be ordered.</p>
</div>


<div class="row">
    <div class="col-md-6 col-md-6">
        <div class="thumbnail">
            <img src="~/img/restaurant.jpg" alt="Img">
            <div class="caption">
                <h3>Restaurants</h3>
                <p>Create your restaurant that will need to take advantage of our Restaurant Restock tool.  You can update and Delete any time you need.</p>
                @Html.ActionLink("Click Here", "Index", "Restaurant")
            </div>
        </div>
    </div>



    <div class="col-md-6 col-md-6">
        <div class="thumbnail">
            <img src="~/img/stockorder.jpg" alt="...">
            <div class="caption">
                <h3>Stock Order</h3>
                <p>Create a stock order.  It will track who created the stock order and the date.  This can be updated or deleted at any time needed..</p>
                @Html.ActionLink("Click Here", "Index", "StockOrder")
            </div>
        </div>
    </div>



    <div class="col-sm-6 col-md-6">
        <div class="thumbnail">
            <img src="~/img/stockitem.jpg" alt="...">
            <div class="caption">
                <h3>Stock Item</h3>
                <p>Click here to start creating stock items that can be added to the Stock Order.  You can add and item, or update and delete existing items.</p>
                @Html.ActionLink("Stock Items", "Index", "StockItem")
            </div>
        </div>
    </div>



    <div class="col-sm-6 col-md-6">
        <div class="thumbnail">
            <img src="~/img/restocktwo.jpg" alt="...">
            <div class="caption">
                <h3>Restock</h3>
                <p>Restock.  Using your stock order ID and the stock item ID you can set your restock quantity.  Add, update, or delete at any time.</p>
                @Html.ActionLink("Click Here", "Index", "Restock")
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>About</h2>
        <p>
            Want to learn more about the site? Click the learn more button to discover the backstory to Restaurant Restock Pro.
        </p>
        @Html.ActionLink("About", "About", "Home")
    </div>
    <div class="col-md-6">
        <h2>Contact us</h2>
        <p>Do you have any questions about the site? Feel free to click "Learn more" to go to our contact page.  We would love to hear any feedback.</p>
        @Html.ActionLink("Contact", "Contact", "Home")
    </div>

</div>
