@model IEnumerable<RestaurantRestockPro.Models.StockItemModels.StockItemListItem>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<div class="row">
    <div class="col-lg-12 col-lg-offset-3">
        <img src="~/img/stockitempto1.jpg" alt="..." class="img-circle">
    </div>
</div>
<br />
<br />
<br />
<br />

<h2>Stock Items</h2>

<p>
    @Html.ActionLink("Create a Stock Item", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]

    </div>
}
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StockItemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StockItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StockItemId }) |
                @Html.ActionLink("Details", "Details", new { id = item.StockItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StockItemId })
            </td>
        </tr>
    }

</table>
<br />
<br />
<br />
<div class="row">
    <div class="btn-group col-lg-offset-3">
        <div class="col-md-12">
            <p><a class="btn btn-danger btn-lg btn-block" href="https://localhost:44374/Restaurant">Restaurants &raquo;</a></p>
        </div>
        <div class="col-md-12">
            <p><a class="btn btn-danger btn-lg btn-block" href="https://localhost:44374/Restock">Restock &raquo;</a></p>
        </div>
        <div class="col-md-12">
            <p><a class="btn btn-danger btn-lg btn-block" href="https://localhost:44374/StockOrder">Stock Orders &raquo;</a></p>
        </div>
    </div>
</div>
