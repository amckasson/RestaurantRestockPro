@model IEnumerable<RestaurantRestockPro.Models.StockOrderModels.StockOrderListItem>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<div class="row">
    <div class="col-lg-12 col-lg-offset-3">
        <img src="~/img/stockorderpto1.jpg" alt="..." class="img-circle">
    </div>
</div>
<br />
<br />
<br />
<br />

<h2>Stock Orders</h2>

<p>
    @Html.ActionLink("Create a Stock Order", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type"button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StockOrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manager)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderCreated)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StockOrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestaurantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCreated)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StockOrderId }) |
                @Html.ActionLink("Details", "Details", new { id = item.StockOrderId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StockOrderId })
            </td>
        </tr>
    }

</table>

<br />
<br />
<br />

<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="panel-title">Creators Note</h3>
    </div>
    <div class="panel-body">
        Step Two: Here you will want to use your Restaurant ID to tie the stock order to a restaurant.  The employee or manager will also be told to enter there name.
    </div>
</div>

<br />
<br />
<br />
<div class="row">
    <div class="btn-group col-lg-offset-5">
        <div class="col-md-12">
            @Html.ActionLink("Restaurants", "Index", "Restaurant")
        </div>
        <div class="col-md-12">
            @Html.ActionLink("Restock", "Index", "Restock")
        </div>
        <div class="col-md-12">
            @Html.ActionLink("Stock Items", "Index", "StockItem")
        </div>
    </div>
</div>

