@model IEnumerable<RestaurantRestockPro.Models.StockOrder.StockOrderListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult")) 
{
    <div class="alert alert-success fade in" role="alert">
        <button type"button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StockOrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manager)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderCreated)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StockOrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manager)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderCreated)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.StockOrderId  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.StockOrderId  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.StockOrderId })
        </td>
    </tr>
}

</table>
