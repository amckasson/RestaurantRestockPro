@model IEnumerable<RestaurantRestockPro.Models.RestaurantModels.RestaurantListItem>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<div class="row">
    <div class="col-lg-12 col-lg-offset-3">
        <img src="~/img/restaurantpht1.jpg" alt="..." class="img-circle">
    </div>
</div>
<br />
<br />
<br />
<br />

<h2>Your Restaurants</h2>

<p>
    @Html.ActionLink("Create New Restaurant", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RestaurantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestaurantName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RestaurantId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RestaurantId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RestaurantId })
            </td>
        </tr>
    }

</table>
<br />
<br />
<br />

<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="panel-title">Creators Note</h3>
    </div>
    <div class="panel-body">
        Step One: This is where you are going to want to start the creation process.  First create your restaurant; you will need to Restaurant ID for the Stock Order page.
    </div>
</div>

<br />
<br />
<br />
<div class="row">
    <div class="btn-group col-lg-offset-5">
        <div class="col-md-12">
            @Html.ActionLink("Restock", "Index", "Restock")
        </div>
        <div class="col-md-12">
            @Html.ActionLink("Stock Items", "Index", "StockItem")
        </div>
        <div class="col-md-12">
            @Html.ActionLink("Stock Orders", "Index", "StockOrder")
        </div>
    </div>
</div>
